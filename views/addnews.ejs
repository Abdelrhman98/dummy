<body>
    <header>
        <% include partials\coverPhoto.ejs %>
    </header>
    <div class="site-wrapper">
        <% include partials\marquee.ejs %>
        <div class="row">
            <div class="col-lg-2 ">
                <% include partials\leftColumn.ejs %>
            </div>
            <div class="main-content">
                <div class="col-lg-8" style="text-align: center;">
                    <div style="width: 85%;margin-top: 8%; margin-left: 15%" class="panel panel-default">
                        <div class="panel-heading" style="text-align: center; font-size: x-large; background-image: linear-gradient(to bottom, #2E1205, #EB010B); color: white">
                            إضافة خبر
                        </div>
                        <div class="panel-body">
                            <div class="form-group" style="direction: rtl;">
                                <form action="/addnews" method="POST">
                                    <label style="float: right;">محتوى الخبر:</label><br>
                                    <textarea id="news_text" name="new" style="float: right; margin-bottom: 2%;" class="form-control"
                                        rows="3" style="margin: 0px -3px 0px 0px; height: 79px; width: 445px;"></textarea>
                                    <button id="btn_adding_news" type="submit" style="float: left;" type="button" class="btn btn-danger">إضافة</button>

                                </form>
                            </div><br>
                        </div>

                    </div>
                </div>
                <div class="col-lg-2">
                    <% include partials\rightColumn.ejs %>
                </div>
            </div>
        </div>
