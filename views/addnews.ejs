        <!-- Custom Theme JavaScript -->
        <script src="../assets/sb-admin-2.js"></script>
        <script>
            var newsBtn = document.getElementById("btn_adding_news");
            newsBtn.onclick = function () {
                if (document.getElementById("news_text").value == "") {
                    alert("برجاء كتابة محتوى");
                } else {
                    alert("تم إضافة خبر جديد بنجاح");
                }
            };
        </script>
